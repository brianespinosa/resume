{
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "same"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cssModules.camelCase": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "html": {
      "attr_quotes": "single"
    },
    "javascript": {
      "self_closing_tag": true
    }
  },
  "emmet.triggerExpansionOnTab": true,
  "eslint.enable": true,
  "eslint.validate": ["json"],
  "git.autofetch": true,
  "prettier.requireConfig": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#83c5be",
    "activityBar.activeBorder": "#edf6f9",
    "activityBar.background": "#006d77",
    "activityBar.foreground": "#edf6f9",
    "activityBar.inactiveForeground": "#83c5be",
    "activityBarBadge.background": "#edf6f9",
    "activityBarBadge.foreground": "#006d77",
    "list.hoverBackground": "#83c5be",
    "list.activeSelectionBackground": "#006d77",
    "sideBarSectionHeader.background": "#006d77"
  }
}
